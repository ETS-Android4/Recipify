<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="81dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:text="Score Santé"
            android:textAlignment="center"
            android:textStyle="bold"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintHorizontal_bias="0.854"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/recipe_thumbnail" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="81dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:text="Temps"
            android:textAlignment="center"
            android:textStyle="bold"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/recipe_thumbnail" />

        <TextView
            android:id="@+id/recipe_health_score"
            android:layout_width="81dp"
            android:layout_height="58dp"
            android:layout_marginTop="28dp"
            android:text="Score santé"
            android:textAlignment="center"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintHorizontal_bias="0.854"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/textView8"
            cardview:layout_constraintVertical_bias="0.269" />

        <TextView
            android:id="@+id/recipe_duration"
            android:layout_width="81dp"
            android:layout_height="58dp"
            android:layout_marginTop="28dp"
            android:text="Time"
            android:textAlignment="center"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/textView7"
            cardview:layout_constraintVertical_bias="0.269" />

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="351dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="#2d2d2d"
            android:textSize="25dp"
            cardview:layout_constraintBottom_toTopOf="@+id/recipe_thumbnail"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent"
            cardview:layout_constraintVertical_bias="0.4" />

        <ImageView
            android:id="@+id/recipe_thumbnail"
            android:layout_width="325dp"
            android:layout_height="215dp"
            android:background="#2d2d2d"
            android:contentDescription="recipe_thumbnail"
            android:scaleType="centerCrop"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent"
            cardview:layout_constraintVertical_bias="0.456" />

        <TextView
            android:id="@+id/recipe_servings"
            android:layout_width="81dp"
            android:layout_height="58dp"
            android:layout_marginTop="28dp"
            android:text="Servings"
            android:textAlignment="center"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintHorizontal_bias="0.133"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/textView6"
            cardview:layout_constraintVertical_bias="0.269" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="81dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:text="Portions"
            android:textAlignment="center"
            android:textStyle="bold"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintHorizontal_bias="0.133"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/recipe_thumbnail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>